<section class="background-color-4 sub-header sub-header-banner-2">
	<div class="grid-container">
		<div class="grid-row">
			<div class="column-12 animated-parent">
				<h2 class="text-color-10 animated animate__fade-in-up-short">Hero units</h2>
			</div>
		</div>
	</div>
</section>

<!-- End of section -->

<section class="margin-top-100">
	<div class="grid-container">
		<div class="grid-row">
			<div class="column-12">
				<h4>Regular Hero Unit</h4>
				<p>
					Hero units can be used to create large visually appealing content areas, and provide a perfect backdrop for a bold call to action.
				</p>
			</div>
		</div>
	</div>
</section>

<section>
	<div class="grid-container-fluid">
		<div class="grid-row">
			<div class="column-12 no-padding">
				<section>
					<div class="hero-unit hero-unit--banner-1">
						<div class="hero-unit__content">
							<div class="grid-container">
								<div class="grid-row">
									<div class="column-12 text-center animated-parent" data-appear-top-offset="-300">
										<h2 class="text-color-11 animated animate__fade-in-down">A Hero unit header</h2>
										<p class="text-color-11 animated animate__fade-in-up">
											Some hero unit sub text
										</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>
			</div>
		</div>
	</div>
</section>

<section class="margin-top-100">
	<div class="grid-container">
		<div class="grid-row">
			<div class="column-12">
				<h4>Off-screen Hero unit</h4>
				<p>
					The offscreen hero unit utilizes an area of the screen which is not fully visible, giving a spacious, sophisticated feeling to your content.
				</p>
			</div>
		</div>
	</div>
</section>

<section>
	<div class="grid-container-fluid">
		<div class="grid-row">
			<div class="column-12 no-padding">
				<section class="background-color-2 offset-hero-unit">
