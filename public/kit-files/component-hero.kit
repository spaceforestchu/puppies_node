						<div class="grid-row">
							<div class="column-5">
								<div class="offset-hero-unit__contents">
									<div class="offset-hero-unit__content">
										<h4 class="text-color-11">An Off-screen hero unit</h4>
										<h5 class="text-color-1 line-height">
											An offscreen hero unit sub-heading
										</h5>
										<p>
											<!-- $lorem-md -->
										</p>
									</div>
								</div>
							</div>
							<div class="column-6 push-column-1 no-padding">
								<div class="offset-hero-unit__images float-left animated-parent" data-appear-top-offset="-300">
									<img src="img/subpages/offscreen-hero.png" class="offset-hero-unit__image animated animate__fade-in-right" alt="">
								</div>
							</div>
						</div>
					</div>
				</section>
			</div>
		</div>
	</div>
</section>

<section class="margin-top-100">
	<div class="grid-container">
		<div class="grid-row">
			<div class="column-12">
				<h4>50/50 Hero unit</h4>
				<p>
					The 50/50 hero unit is similar in concept to the offscreen unit, but does not hide any part of the image offscreen.
				</p>
			</div>
		</div>
	</div>
</section>

