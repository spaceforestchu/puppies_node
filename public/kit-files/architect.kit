<div class="modal modal-toggle">
	<span class="modal-close"></span>
	<div class="modal-content">
		<div class="grid-container">
			<div class="grid-row">
				<div class="column-12">
					<h4>Request a consultation</h4>
					<form action="post" class="form">
						<div class="grid-container">
							<div class="grid-row">
								<div class="column-6">
									<label class="label">Name</label>
									<input type="text" class="input">
								</div>
								<div class="column-6">
									<label class="label">Email address</label>
									<input type="email" class="input">
								</div>
							</div>
							<div class="grid-row margin-top-20">
								<div class="column-12">
									<label class="label">Project details</label>
									<textarea class="input" name="name" rows="8" cols="40"></textarea>
									<button type="submit" class="button text-color-10 margin-top-20">Submit</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

