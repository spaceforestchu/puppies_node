<div class="ensemble-slideshow-container">
	<div class="ensemble-slideshow"
	data-cycle-log="false"
	data-cycle-fx="scrollHorz"
	data-cycle-timeout="8000"
	data-cycle-loader="wait"
	data-cycle-pause-on-hover="true"
	data-cycle-speed="400"
	data-cycle-prev=".ensemble-slideshow__previous-slide"
	data-cycle-slide-class="ensemble-slideshow__slide"
	data-cycle-next=".ensemble-slideshow__next-slide"
	data-cycle-pager=".ensemble-slideshow__pager"
	data-cycle-slides="> div">
		<div class="ensemble-slideshow__first-slide">
			<img src="img/architect/architect__slider-image-1.jpg" alt="Slide image">
			<div class="ensemble-slideshow__layer ensemble-slideshow__layer-center ">
				<div class="ensemble-slideshow__caption animate__fade-in-right">
					<img class="slider-heading__light-background" src="img/architect/architect__slider-caption-1.png" alt="">
				</div>
				<div class="ensemble-slideshow__caption animate__fade-in-left margin-top-20">
					<img class="slider-heading__dark-background" src="img/architect/architect__slider-caption-2.png" alt="Slide image">
				</div>
			</div>
		</div>
		<div>
			<img src="img/architect/architect__slider-image-2.jpg" alt="Slide image">
			<div class="ensemble-slideshow__layer ensemble-slideshow__layer-center ">
				<div class="ensemble-slideshow__caption animate__fade-in-down">
					<img class="center-image slider-heading__light-background" src="img/architect/architect__slider-caption-3.png" alt="">
				</div>
				<div class="ensemble-slideshow__caption animate__fade-in-up margin-top-20">
					<img class="center-image slider-heading__dark-background" src="img/architect/architect__slider-caption-4.png" alt="Slide image">
				</div>
			</div>
		</div>
		<a href="#" class="ensemble-slideshow__previous-slide">
			<i class="ion-ios-arrow-left"></i>
		</a>
		<a href="#" class="ensemble-slideshow__next-slide">
			<i class="ion-ios-arrow-right"></i>
		</a>
	</div>
	<div class="ensemble-slideshow__pager ensemble-slideshow__pager--on-slider ensemble-slideshow__pager--rounded"></div>
</div>

